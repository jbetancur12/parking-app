---
import { APP_URL } from '../consts';
---

<nav class="fixed top-0 w-full z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100/50 shadow-sm transition-all duration-300" id="navbar">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <!-- Brand -->
            <div class="flex-shrink-0 flex items-center gap-2 cursor-pointer" onclick="window.scrollTo(0,0)">
                <img src="/LogoTexto.png" alt="Aparca Logo" class="h-10 w-auto" />
            </div>

            <!-- Desktop Links -->
            <div class="hidden md:flex space-x-8 items-center">
                <a href="#features" class="text-gray-600 hover:text-brand-blue font-medium transition-colors">Características</a>
                <a href="#how-it-works" class="text-gray-600 hover:text-brand-blue font-medium transition-colors">Cómo Funciona</a>
                <a href="#pricing" class="text-gray-600 hover:text-brand-blue font-medium transition-colors">Precios</a>
                <a href="#testimonials" class="text-gray-600 hover:text-brand-blue font-medium transition-colors">Clientes</a>
                <a href="#faq" class="text-gray-600 hover:text-brand-blue font-medium transition-colors">FAQ</a>
                <a href="#contact" class="text-gray-600 hover:text-brand-blue font-medium transition-colors">Contacto</a>
            </div>

            <!-- Action Buttons -->
            <div className="hidden md:flex items-center gap-4">
                <button
                    id="demo-video-trigger"
                    class="inline-flex items-center gap-2 text-brand-blue font-bold px-5 py-2.5 rounded-xl hover:bg-blue-50 transition-all border border-transparent hover:border-blue-100"
                >
                    <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M8 5v14l11-7z"/>
                    </svg>
                    Ver Demo
                </button>
                <a 
                    href={APP_URL} 
                    class="bg-brand-blue text-white px-6 py-2.5 rounded-xl font-bold hover:bg-blue-900 transition-all shadow-lg hover:shadow-brand-blue/20 active:scale-95"
                >
                    Ingresar
                </a>
            </div>

            <!-- Mobile Menu Button (visible only on mobile) -->
            <div class="md:hidden flex items-center">
                <button
                    id="mobile-menu-trigger"
                    class="text-gray-600 hover:text-brand-blue p-2"
                    aria-label="Toggle menu"
                >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</nav>
