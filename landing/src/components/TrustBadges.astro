---
import { Shield, Lock, Headphones, Award } from 'lucide-react';

const badges = [
    {
        icon: Shield,
        title: "Cumple con DIAN",
        description: "Facturación electrónica certificada"
    },
    {
        icon: Lock,
        title: "Datos Seguros",
        description: "Encriptación SSL de nivel bancario"
    },
    {
        icon: Headphones,
        title: "Soporte 24/7",
        description: "Asistencia técnica permanente"
    },
    {
        icon: Award,
        title: "100% Confiable",
        description: "+150 parqueaderos activos"
    }
];
---

<section class="py-12 bg-white border-y border-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            {badges.map((badge) => {
                const Icon = badge.icon;
                return (
                    <div class="text-center">
                        <div class="inline-flex items-center justify-center w-12 h-12 mb-3 rounded-full bg-brand-blue/10 text-brand-blue">
                            <Icon size={24} />
                        </div>
                        <h4 class="font-bold text-sm text-gray-900 mb-1">{badge.title}</h4>
                        <p class="text-xs text-gray-600">{badge.description}</p>
                    </div>
                );
            })}
        </div>
    </div>
</section>
