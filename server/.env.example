# Database Configuration
# Use 'sqlite' for Electron, 'postgresql' for Web
DB_TYPE=sqlite

# PostgreSQL Configuration (only needed if DB_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=parking_db
DB_USER=postgres
DB_PASSWORD=yourpassword

# Application Mode
# Set to 'electron' for desktop app, leave unset for web
APP_MODE=electron

# Server Port
PORT=3001

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# App Timezone (optional, defaults to America/Bogota)
APP_TIMEZONE=America/Bogota
